{
  "name": "@foxglove/eslint-plugin",
  "version": "0.14.0",
  "description": "Foxglove eslint configuration",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/foxglove/eslint-plugin.git"
  },
  "main": "index.js",
  "files": [
    "**/*.js"
  ],
  "scripts": {
    "tsc": "tsc",
    "lint": "npm run lint:base && npm run lint:jest && npm run lint:react && npm run lint:typescript",
    "lint:base": "eslint --report-unused-disable-directives --config ./configs/base.js .",
    "lint:jest": "eslint --report-unused-disable-directives --config ./configs/jest.js",
    "lint:react": "eslint --report-unused-disable-directives --config ./configs/react.js",
    "lint:typescript": "eslint --report-unused-disable-directives --config ./configs/typescript.js **/*.ts"
  },
  "peerDependencies": {
    "eslint": "^7",
    "eslint-config-prettier": "^8",
    "eslint-plugin-es": "^4",
    "eslint-plugin-filenames": "^1",
    "eslint-plugin-import": "^2",
    "eslint-plugin-prettier": "^3",
    "prettier": "^2"
  },
  "devDependencies": {
    "@foxglove/eslint-plugin": "file:.",
    "@foxglove/tsconfig": "1.0.0",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "eslint-plugin-jest": "^24",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "typescript": "^4"
  }
}
